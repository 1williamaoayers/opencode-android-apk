<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 允许所有域名的 HTTP 明文流量（用户的服务器 IP 不可预测） -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
