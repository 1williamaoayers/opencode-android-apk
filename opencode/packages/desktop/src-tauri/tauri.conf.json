{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OpenCode Mobile",
  "identifier": "ai.opencode.mobile",
  "mainBinaryName": "OpenCode",
  "version": "../package.json",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "OpenCode",
        "width": 400,
        "height": 700,
        "minWidth": 320,
        "minHeight": 400,
        "resizable": true,
        "fullscreen": false,
        "create": true
      }
    ],
    "withGlobalTauri": true,
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "icon": [
      "icons/dev/32x32.png",
      "icons/dev/128x128.png",
      "icons/dev/128x128@2x.png",
      "icons/dev/icon.icns",
      "icons/dev/icon.ico"
    ],
    "active": true,
    "targets": "all",
    "externalBin": [],
    "linux": {
      "rpm": {
        "compression": {
          "type": "none"
        }
      }
    },
    "macOS": {
      "entitlements": "./entitlements.plist"
    },
    "windows": {
      "nsis": {
        "installerIcon": "icons/dev/icon.ico",
        "headerImage": "assets/nsis-header.bmp",
        "sidebarImage": "assets/nsis-sidebar.bmp"
      }
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["opencode"]
      }
    }
  }
}
